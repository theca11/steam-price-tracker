{
	"scripts": {
		"build": "rollup -c",
		"watch": "rollup -c -w --watch.onEnd=\"streamdeck restart dev.theca11.steam-price-tracker\"",
		"pack": "streamdeck pack -f -o ./dist ./dev.theca11.steam-price-tracker.sdPlugin",
		"release": "npm run build && npm run pack",
		"lint": "eslint .",
		"lint-fix": "eslint --fix .",
		"all-sharp": "npm run sharp-mac-intel && npm run sharp-mac-arm && npm run sharp-win",
		"sharp-mac-intel": "npm install --cpu=x64 --os=darwin sharp",
		"sharp-mac-arm": "npm install --cpu=arm64 --os=darwin sharp",
		"sharp-win": "npm install --cpu=x64 --os=win32 sharp",
		"postinstall": "npm run all-sharp"
	},
	"type": "module",
	"devDependencies": {
		"@elgato/cli": "^0.3.2",
		"@rollup/plugin-commonjs": "^25.0.5",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^15.2.2",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^11.1.5",
		"@tsconfig/node20": "^20.1.2",
		"@types/node": "20.8.10",
		"@typescript-eslint/eslint-plugin": "^8.4.0",
		"@typescript-eslint/parser": "^8.4.0",
		"eslint": "^8.57.0",
		"eslint-plugin-import": "^2.30.0",
		"eslint-plugin-promise": "^7.1.0",
		"rollup": "^4.0.2",
		"rollup-plugin-copy": "^3.5.0",
		"rollup-plugin-license": "^3.5.2",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"@elgato/streamdeck": "^0.4.0-beta.5",
		"croner": "^8.1.1",
		"debounce": "^2.1.0",
		"sharp": "^0.33.5"
	}
}
